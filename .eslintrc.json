{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-trailing-spaces": "off",
        "linebreak-style": "off",
        "eol-last": "off",
        "no-console": "off",
        "no-unneeded-ternary": "off",
        "max-len": "off",
        "no-else-return": "off",
        "arrow-body-style": "off"
    }
}
